#include "rt_float.h"

typedef	struct		s_ray
{
	RT_F4			origin;
	RT_F4			direction;
	RT_F 			t;
}					t_ray;

static RT_F4		ray_intersect(t_ray *ray)
{
	if (0)
	printf("{%f, %f, %f, %f} + {%f, %f, %f, %f} * %f = {%f, %f, %f, %f}\n",
		ray->origin.x, ray->origin.y, ray->origin.z, ray->origin.w,
		ray->direction.x, ray->direction.y, ray->direction.z, ray->direction.w,
		ray->t,
		(ray->origin + ray->direction * ray->t).x,  (ray->origin + ray->direction * ray->t).y,  (ray->origin + ray->direction * ray->t).z,  (ray->origin + ray->direction * ray->t).w);
	return (ray->origin + ray->direction * ray->t);
}